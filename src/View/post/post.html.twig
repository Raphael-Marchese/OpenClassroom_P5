{% extends 'layout.html.twig' %}

{% block body %}
<main class="flex-shrink-0">
    {% if session.user_id == post.author.id or session.role == 'ROLE_ADMIN'%}
    <div class="d-flex justify-content-end m-3">
        <a href="/post/{{ post.id }}/edit">
            <button class="btn btn-secondary me-3">Modifier</button>
        </a>
        <a href="/post/{{ post.id }}/delete">
            <button class="btn btn-danger">Supprimer</button>
        </a>
    </div>
    {% endif %}
    {% for error in errors %}
        <div class=" text-danger m-3"> {{ error }} </div>
    {% endfor %}



        <!-- Page Content-->
    <section class="py-5">
        <div class="container px-5 my-5">
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-9">
                    <!-- Post content-->
                    <article>
                        <!-- Post header-->
                        <header class="mb-4">
                            <!-- Post title-->
                            <h1 class="fw-bolder mb-1">{{ post.title|raw  }}</h1>
                            <p class="card-text mb-0">{{ post.chapo|raw }}</p>

                            <!-- Post meta content-->
                            {% if post.updated_at %}
                                <div class="text-muted fst-italic mb-2">Mis à jour le {{ post.updated_at|format_datetime('full', 'short', locale='fr') }}</div>
                            {% else %}
                                <div class="text-muted fst-italic mb-2">{{ post.created_at|format_datetime('full', 'short', locale='fr') }}</div>
                            {% endif %}
                            <div class="text-muted">{{ post.author.username }}</div>


                        </header>

                        <!-- Preview image figure-->
                        <figure class="mb-4"><img class="img-fluid rounded" src="../../../public/assets/images/{{ post.image }}" alt="..." /></figure>

                        <!-- Post content-->
                        <section class="mb-5">
                            <p class="fs-5 mb-4">{{ post.content|raw }}</p>
                        </section>
                    </article>
                    <!-- Comments section-->
                    <section>
                        <div class="card bg-light">
                            <div class="card-body">
                                <!-- Comment form-->
                                {% if session %}
                                <form class="mb-4 d-flex gap-2" id="createCommentForm" method="post" action="/comment/create/submit">
                                    <textarea name="content" id="comment-content" class="form-control" rows="3" placeholder="Écrivez ici votre commentaire"></textarea>
                                    <button class="btn btn-warning btn-sm me-md-2">Commenter</button>
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                    <input type="hidden" name="post_id" value="{{ post.id }}">
                                </form>
                                {% endif %}
                                <div class="d-flex flex-column gap-2 ">
                                    {% for comment in comments %}
                                    <!-- Parent comment-->
                                    <div class="d-flex  align-items-center ">
                                        <div class="flex-shrink-0"><img class="rounded-circle" style="width: 50px; height: 50px;" src="../../../public/assets/images/user.png" alt="..." /></div>
                                        <div class="fw-bold ms-3">{{ comment.author.username }}</div>
                                        <
                                    </div>
                                    <div class="ms-3">
                                        {{ comment.content }}
                                    </div>

                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class=" text-danger mb-3">{{ errors.csrf_token }}</div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}

