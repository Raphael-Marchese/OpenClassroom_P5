{% extends 'layout.html.twig' %}

{% block body %}
    <main class="flex-shrink-0">
        <!-- Page content-->
        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                    <div class="text-center mb-5">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                        <h1 class="fw-bolder">Connexion</h1>
                        <p class="lead fw-normal text-muted mb-0">Saisissez ici vos identifiants de connexion</p>
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-8 col-xl-6">
                            <form id="loginForm" method="post" action="/login/submit">
                                <!-- Email address input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="email" id="email" type="email" placeholder="name@example.com" data-sb-validations="required,email" />
                                    <label for="email">Adresse email</label>
                                    <div class="invalid-feedback" data-sb-feedback="email:required">L'email est obligatoire</div>
                                    <div class="invalid-feedback" data-sb-feedback="email:email">Cet email n'est pas valide</div>
                                </div>

                                <!-- Password input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="password" id="password" type="password" data-sb-validations="required" />
                                    <label for="password">Mot de passe</label>
                                    <div class="invalid-feedback" data-sb-feedback="password:required">Le mot de passe est obligatoire</div>
                                </div>

                                {% if errorMessage %}
                                    <div class="text-center text-danger mb-3">
                                        {{ errorMessage }}
                                    </div>
                                {% endif %}
                                <!-- Submit Button-->
                                <div class="d-grid"><button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

{% endblock %}
