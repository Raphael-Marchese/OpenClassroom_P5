{% extends 'layout.html.twig' %}

{% block body %}
    <main class="flex-shrink-0">
        <!-- Page Content-->
        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                    <div class="text-center mb-5">
                        <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                        <h1 class="fw-bolder">Nouvel article</h1>
                        <p class="lead fw-normal text-muted mb-0">Écrivez ici votre article pour le blog</p>
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-8 col-xl-6">

                            <form id="createPostForm" method="post" action="/post/submit/create" enctype="multipart/form-data">

                                <div class=" text-danger mb-3">{{errors.author}}</div>

                                <!-- Title input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" name="title" id="title" type="text" placeholder="Ecrivez ici votre titre..." value="{{ formData.title|default('') }}" data-sb-validations="required" />
                                    <label for="title">Titre</label>
                                    <div class="invalid-feedback" data-sb-feedback="name:required">Le titre est obligatoire</div>
                                    <div class=" text-danger mb-3">{{errors.title}}</div>

                                </div>
                                <!-- Chapo input-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="chapo" name="chapo"  type="text" placeholder="le chapo est utile pour décrire ou résumer l'article" value="{{ formData.chapo|default('') }}" data-sb-validations="required,email" />
                                    <label for="chapo">Chapo</label>
                                    <div class="invalid-feedback" data-sb-feedback="email:required">un chapo est obligatoire</div>
                                    <div class=" text-danger mb-3">{{errors.chapo}}</div>

                                </div>
                                <!-- Image upload-->
                                <div class="form-floating mb-3">
                                    <input class="form-control" type="file" id="image" name="image" accept="image/png, image/jpeg" />
                                    <label class="mb-2" for="image">Choisissez une photo d'illustration</label>
                                    <div class=" text-danger mb-3">{{errors.image}}</div>

                                </div>
                                <!-- Content input-->
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" id="content" name="content"  type="text" placeholder="Ajouter le contenu de l'article"  style="height: 20rem" data-sb-validations="required">
                                        {{ formData.content |default('') }}
                                    </textarea>
                                    <label for="content">Contenu</label>
                                    <div class="invalid-feedback" data-sb-feedback="message:required">Un text de contenu est nécessaire.</div>
                                    <div class=" text-danger mb-3">{{errors.content}}</div>

                                </div>
                                <!-- Submit Button-->
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg " name="submitButton" id="publish" value="published" type="submit">Publier</button>
                                    <button class="btn btn-primary btn-lg " name="submitButton" id="draft" value="draft" type="submit" > Enregistrer en tant que brouillon</button>
                                </div>
                                <div class=" text-danger mb-3">{{ twigError }}</div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{% endblock %}